<%= error_messages_for(f.object) %>

<table summary="Subject form fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Position</th>
    <% count = Subject.count + (f.object.new_record? ? 1 : 0) %>
    <td><%= f.select(:position, 1..count) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td>
      <%= f.radio_button(:visible, '1') %> Yes
      <%= f.radio_button(:visible, '0') %> No
    </td>
  </tr>
</table>
